<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreatePerson</servlet-name>
        <servlet-class>CreatePerson</servlet-class>
    </servlet>
     <servlet>
        <servlet-name>BoardPageServlet</servlet-name>
        <servlet-class>BoardPageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateTeam</servlet-name>
        <servlet-class>CreateTeam</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateBoard</servlet-name>
        <servlet-class>CreateBoard</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreatePerson</servlet-name>
        <url-pattern>/CreatePerson</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateTeam</servlet-name>
        <url-pattern>/CreateTeam</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateBoard</servlet-name>
        <url-pattern>/CreateBoard</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BoardPageServlet</servlet-name>
        <url-pattern>/BoardPageServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>jsp/index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
